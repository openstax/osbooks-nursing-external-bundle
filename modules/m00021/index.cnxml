              <m:mtd columnalign="right"><m:mn>2</m:mn><m:mo>.</m:mo><m:mn>5</m:mn><m:mo>×</m:mo><m:mi>X</m:mi></m:mtd>
              <m:mtd><m:mo>=</m:mo></m:mtd>
              <m:mtd columnalign="left"><m:mn>1</m:mn><m:mo>×</m:mo><m:mn>10</m:mn></m:mtd>
            </m:mtr>
            <m:mtr>
              <m:mtd columnalign="right">
              <m:mfrac>
                <m:mrow><m:mn>2</m:mn><m:mo>.</m:mo><m:mn>5</m:mn><m:mi>X</m:mi></m:mrow>
                <m:mrow><m:mn>2</m:mn><m:mo>.</m:mo><m:mn>5</m:mn></m:mrow>
              </m:mfrac>  
            </m:mtd>
              <m:mtd><m:mo>=</m:mo></m:mtd>
